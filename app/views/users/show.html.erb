<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<%= image_tag("https://media.licdn.com/dms/image/C4D03AQFOu-oYxqx7Ww/profile-displayphoto-shrink_800_800/0/1651918961187?e=1691020800&v=beta&t=dNNiYKRz_q-VxqGOMBzdprAZTSlSqcXHF4vFzfO4sQI",
                 alt:@user.username, 
                 class: "rounded shadow mx-auto d-block",
                 style: 'height:20vw;width:20vw' )%>
<% if logged_in? && @user == current_user %>
    <div class="text-center mt-4">
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
    </div>
<% end %>
<h3 class="text-center mt-4">Articles</h3>
<div class="flickr_pagination">
    <%= will_paginate @articles, :container => false %>
</div>
<%= render 'articles/article'%>
<div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
</div>